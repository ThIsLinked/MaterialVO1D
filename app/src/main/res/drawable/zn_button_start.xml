<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:antialias="@bool/antialias_general"
            android:dither="@bool/dither_general"
            android:filter="@bool/filter_general"
            android:shape="rectangle">
            <solid android:color="@color/zn_main_bg" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/button_start_padding"
        android:left="@dimen/button_start_padding"
        android:right="@dimen/button_start_padding"
        android:top="@dimen/button_start_padding">
        <ripple android:color="@color/zn_main_bg">
            <item>
                <shape
                    android:antialias="@bool/antialias_general"
                    android:dither="@bool/dither_general"
                    android:filter="@bool/filter_general"
                    android:shape="rectangle">
                    <corners android:radius="@dimen/radius_edge_large" />
                    <solid android:color="@color/zn_colorAccent" />
                </shape>
            </item>
        </ripple>
    </item>
</layer-list>

