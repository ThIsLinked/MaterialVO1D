<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <ripple android:color="@color/zn_pressed" />
    </item>
    <item android:state_selected="true">
        <ripple android:color="@color/pressed">
            <item>
                <shape android:antialias="@bool/antialias_general" android:dither="@bool/dither_general" android:filter="@bool/filter_general" android:shape="rectangle">
                    <solid android:color="@color/zn_selected_bg" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>
